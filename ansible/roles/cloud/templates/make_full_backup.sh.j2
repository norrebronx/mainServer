#!/bin/bash

function backup() {
	SOURCE=${1}
	TARGET=${2}

	if [ -z ${SOURCE} ]; then
		echo "ERROR. Missing SOURCE"
		exit 1
	fi

	if [ -z ${TARGET} ]; then
		TARGET={{ backup_root }}/`basename ${SOURCE}`
	fi

	rm -rf ${TARGET}.1
	cp -al ${TARGET}.0 ${TARGET}.1
	cp -al ${TARGET} ${TARGET}.0
	rsync -av --delete ${SOURCE} ${TARGET}
}

{% for path in backup_paths %}
backup {{ path }}
{% endfor %}